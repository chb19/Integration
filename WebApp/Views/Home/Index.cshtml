@model WebApp.Models.HomeModel

@{
    ViewData["Title"] = "News";
}

<link rel="stylesheet" href="~/css/site.css">

<table id="dtBasicExample" cellspacing="0"
       class="table table-striped table-bordered"
       style="width:100%">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Author</th>
            <th scope="col">Description</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @{ int counter = 1;
            foreach (var discipline in Model.News)
            {
                <tr>
                    <td class="align-middle" align="center" scope="row">@counter</td>
                    <td class="align-middle" align="center">@discipline.Title</td>
                    <td class="align-middle" align="center">@discipline.Author</td>
                    <td class="align-middle" align="center">@discipline.Description</td>
                    <td class="align-middle">
                        <div class="row justify-content-center">
                            <form style="width:105px;" asp-action="DeleteDiscipline" asp-route-id="@discipline.ID" method="post">
                                <div class="row">
                                    <div class="col" align="center">
                                        <input class="btn btn-sm btn-danger" style="padding-left:5px; padding-right:5px;" type="submit" value="Delete" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </td>
                </tr>
                counter++;
            }
        }
    </tbody>
</table>
